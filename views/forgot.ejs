<body style="background-color: #08354b;">
    <div class="log fadeInDown">
        <div id="formContent">
            <!-- Título -->
            <br>
            <img src="/images/TIC_Isotipo.png" width="40" height="40" align="center">
            <h2 class="active"> Cambiar Contraseña </h2>
            <h2 class="inactive underlineHover"></h2>

            <!-- Icon -->
            <div class="fadeIn first">

            </div>

            <!-- Login -->
            <form action="/forgot" method="POST">
                <input type="email" autocomplete="off" class="fadeIn second" name="email" placeholder="Email">
